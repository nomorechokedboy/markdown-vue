{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"types": ["vitest/globals", "vitest/importMeta"],
		"baseUrl": "."
	},
	"include": [
		"lib/**/*.ts",
		"lib/**/*.d.ts",
		"lib/**/*.tsx",
		"lib/**/*.vue"
	],
	"references": [{ "path": "./tsconfig.node.json" }]
}
